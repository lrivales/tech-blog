<div class="container">
  <div class="columns">
    <div class="column">
      <form class="login-form form-group form-horizontal">
        <div>
          <label for="email-login" class="form-label">email:</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div>
          <label for="password-login" class="form-label">password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div>
          <button class="btn btn-primary" type="submit">login</button>
        </div>
      </form>
    </div>
    
    <div class="column">
      <form class="signup-form form-group form-horizontal">
        <div>
          <label for="username-signup" class="form-label">username:</label>
          <input class="form-input" type="text" id="username-signup" />
        </div>
        <div>
          <label for="email-signup" class="form-label">email:</label>
          <input class="form-input" type="text" id="email-signup" />
        </div>
        <div>
          <label for="password-signup" class="form-label">password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
        <div>
          <button class="btn btn-primary" type="submit">signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/javascript/login.js"></script>